&CMD`BOON.PRAXIS.DENY #2885=$+boons/deny *=*:@assert [cor(orflags(%#,Wr),member(xget(me,DATA`HARPIES),%#))];@assert [cand(isnum(%0),lte(%0,words(xget(%va,UNAPP_BOONS),|)))]={@pemit %#=[ansi(hr,ERR:)]%bEither %0 is not a number or the ID is invalid.};[setq(A,[extract(xget(%va,UNAPP_BOONS),%0,1,|)])][attrib_set(%va/UNAPP_BOONS,[ldelete(xget(%va,UNAPP_BOONS),%0,|)])];@pemit %#=[ansi(BOONS:)]%bYou have denied [extract(%qA,1,1,~)]'s boon to [extract(%qa,2,1,~)] for [extract(%qa,4,1,~)];@trig #18/TRIG_CREATE=#2885,#3632,2,Denied Boon,%RDate: [timefmt($a $m-$d-$Y)]%RDenier: [name(%#)]%RAmount: [extract(%qA,3,1,~)]%RFrom Person: [extract(%qA,1,1,~)]%RTo Person: [extract(%qA,2,1,~)]%RReason for Boon: [extract(%qA,4,1,~)]%R%RThis boon was denied by [name(%#)] for the reason given:%R%0

